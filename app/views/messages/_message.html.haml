.chat-main{data: {message: {id: message.id}}}
  .message-box
    .messageInfo
      .messageInfo__user-name
        = message.user.name
      .messageInfo__date 
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .messages
      - if message.content.present?
        %p.Message__content
          = message.content
      = image_tag message.image.url, class: 'Message__image' if message.image.present?